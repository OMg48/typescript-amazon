{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
  },
  "include": [
    "src/**/*.ts",
  ],
}
